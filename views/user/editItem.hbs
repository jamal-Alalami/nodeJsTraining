<!-- Start SignUp Section -->
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>Add New Item</h1>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages}}
                    <p>{{ this }}</p>
                {{/each}}
            </div>
        {{/if}}

        <form action="/user/editItems/?_csrf={{csrfToken}}" method="post" enctype="multipart/form-data">
            {{#each item}}
            <input type="hidden" name="id" value="{{this.id}}"/>
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" class="form-control" required value="{{this.title}}">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" id="description" name="description" class="form-control" required value="{{this.description}}">
            </div>
            <div class="form-group">
                <label for="title">Price</label>
                <input type="number" id="price" name="price" class="form-control" required value="{{this.price}}">
            </div>
            <div class="form-group">
                <label for="title">image</label>
                <img src="../../{{this.imagePath}}" alt="..." class="thumbnail img-responsive" id="imgg">
                <input type="file" id="price" name="myImage" class="form-control" value="{{this.imagePath}}" accept=".jpg, .jpeg, .png" onchange="previewFile()">
                <input type="hidden" name="oldImg" value="{{this.imagePath}}" />
            </div>
            <script>
            function previewFile() {
              var preview = document.getElementById('imgg');
              var file    = document.querySelector('input[type=file]').files[0];
              var reader  = new FileReader();

              reader.addEventListener("load", function () {
                preview.src = reader.result;
              }, false);

              if (file) {
                reader.readAsDataURL(file);
              }
            }
            </script>
            <button type="submit" class="btn btn-success">Edit Item</button>
        </form>
        {{/each}}
    </div>
</div>
<!-- End SignUp Section -->
