
<!-- Start Items Section -->

<div class="row">
    {{#each items}} <!-- loop in products -->
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="../../{{this.imagePath}}" alt="..." class="img-responsive">
            <div class="caption">
                <h3>{{ this.title }}</h3>
                <p class="description">{{ this.description }}</p>
                <div class="clearfix">
                    <div class="price pull-left">{{ this.price }}</div>
                    <a href="/user/removeItems/{{this.id}}" class="btn btn-danger pull-right" role="button">Remove</a>
                    <a href="/user/editItems/{{this.id}}" class="btn btn-success pull-right" role="button">Edit</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
<!-- End Items Section -->

<a   class="btn btn-success " role="button" href="/user/addItem">add item</a>
